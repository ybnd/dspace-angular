{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "tsconfig",
    "lib": ["es2020"],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "outDir": "../dist/schematics",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2020",
    "types": ["jasmine", "node"],
    "resolveJsonModule": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "./**/*.spec.ts"
  ]
}
